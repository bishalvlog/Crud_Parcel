
@model IEnumerable<ParcelManagementSystemMVC.Models.Branch>

@{
    ViewData["Title"] = "BranchList";
    Layout = "AdminLayout";
}

<form method="post" asp-action="AdminUser" asp-controller="AddBranch">
    <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#"><u>Home</u></a></li>
            <li class="breadcrumb-item"><a href="#"><u>Branch</u></a></li>
            <li class="breadcrumb-item active" aria-current="page">Branch List</li>
        </ol>
    </nav>
    <div class="main">
        <div class="container">
            <div class="row align-items-center g-4 mt-3">
                <div class="col-auto">
                    <label>Branch Code :</label>
                </div>
                <div class="col-auto">
                    <input type="search" value="@ViewData["BranchList"]" name="branch" class="form-control">
                </div>
                <div class="col-auto">
                    <label>Branch Name :</label>
                </div>
                <div class="col-auto">
                    <input type="text"  class="form-control">
                </div>
                <div class="col-auto">
                    <label>City :</label>
                </div>
                <div class="col-auto">
                    <input type="text" class="form-control">
                </div>
                <div class="col-auto">
                    <a asp-action="BranchList">Search</a>
                </div>
                <div class="excel-btn d-flex justify-content-end col-11">
                    <button id="downloadexcel" class="btn border-0"><i class="fa-solid fa-file-export"></i></button>
                    <label>Export to Excel</label>
                </div>
                <p  class="text-center text-success">@TempData["error"]</p>
                <table id="example-table" class="table table-striped table-bordered  table-hover ">
                    <thead>
                        <tr>
                            <th>Branch Name </th>
                            <th>Branch Code </th>
                            <th>City</th>
                            <th>State</th>
                            <th>Zip Code</th>
                            <th>Total Staff</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var i in Model)
                         {
                            <tr>
                                <td>@i.Branch_name</td>
                                <td>@i.Branch_code</td>
                                <td>@i.City</td>
                                <td>@i.State</td>
                                <td>@i.Zip_code</td>
                                <td>55</td>
                                <td scope="col">
                                    <div class="d-grid d-md-flex ">
                                        <a class="btn btn-primary btn-sm" asp-controller="AdminUser" asp-action="Edit" asp-route-id="@i.id">Edit</a> 
                                        <a class="btn btn-success  ms-1 btn-danger" asp-controller="AdminUser" asp-action="Delete" asp-route-id="@i.id">Delete</a>
                                        <a class="btn btn-success  ms-1 btn-" asp-controller="AdminUser" asp-action="Details" asp-route-id="@i.id">Details</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</form>