@model ParcelManagementSystemMVC.Models.Branch

@{
    ViewData["Title"] = "AddBranch";
    Layout = "AdminLayout";
}
  <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#"><u>Home</u></a></li>
        <li class="breadcrumb-item"><a href="#"><u>Branch</u></a></li>
        <li class="breadcrumb-item active" aria-current="page">Add New</li>
     </ol>
  </nav>
 <form method="post" asp-controller="AdminUser" asp-action="AddBranch">
   <div class="main">
      <div class="container">
            <div class="row align-items-center g-4 mt-3">
                <div class="col-auto">
                    <label>Branch Name :</label>
                </div>
                <div class="col-auto">
                    <input type="text" asp-for="Branch_name" class="form-control">
                </div>
                 <div class="col-auto">
                    <label>Branch Code :</label>
                </div>
                <div class="col-3">
                    <input type="text" asp-for="Branch_code" class="form-control" aria-describedby="passwordHelpInline">
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-auto ms-5">
                    <label>Street :</label>
                </div>
                <div class="col-auto">
                    <input type="text" asp-for="Street" class="form-control"/>
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-auto ms-5">
                    <label>City :</label>
                </div>
                <div class="col-auto ms-3">
                    <input type="text" asp-for="City" class="form-control" />
                </div> 
            </div>
            <div class="row mt-2">
                <div class="col-auto ms-5">
                    <label>State :</label>
                </div>
                <div class="col-auto ms-2">
                    <input type="text" asp-for="State" class="form-control" />
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-auto ms-4">
                    <label>Zip Code:</label>
                </div>
                <div class="col-auto ms-2">
                    <input type="text"  asp-for="Zip_code" class="form-control" />
                </div>
            </div>
            <div class="d-grid gap-lg-2 d-md-flex justify-content-md-center p-2 mt-4 ">
                <button class="btn btn-outline-primary me-md-2" type="submit">Sumbit</button>
                <button class="btn btn-outline-primary" type="button">Reset</button>
            </div>
      </div>
  </div>
    
</form>