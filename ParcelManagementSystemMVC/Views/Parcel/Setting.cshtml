    <div class="col-7">
        

        <h3>Sender Information</h3>
        <div class="card col-8">
            <div class="m-3 row">
                <label for="SName" class="col-4 col-form-label">Sender Default Name:</label>
                <div class="col-8">
                    <input type="text" class="form-control" id="SName">
                </div>
            </div>
            <div class="m-3 row">
                    <label for="SAddress" class="col-4 col-form-label">Sender Default Address:</label>
                <div class="col-8">
                    <input type="text" class="form-control" id="SAddress">
                </div>
            </div>
            <div class="m-3 row">
                    <label for="SPhoneNumber" class="col-4 col-form-label">Sender Default Phone Number:</label>
                <div class="col-8">
                    <input type="text" class="form-control" id="SPhoneNumber">
                </div>
            </div>
            <h6>Email Notifications:</h6>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
